@model IEnumerable<ApplicationWeb.Models.OffreViewModel>

<p>
    @Html.ActionLink("Ajouter Offre", "AjouterOffre")
</p>

    <nav class="navbar navbar-light bg-light d-flex flex-row">
        @using (Html.BeginForm("RechercherOffre", "Offre", FormMethod.Get, new { @class = "form-inline d-flex" }))
        {
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search" required>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        }
    </nav>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Intitule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salaire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.Id)

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Intitule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsable)
            </td>
            <td>
                @Html.ActionLink("Modifier", "ModifierOffre", "Offre", new { id = item.Id }, new { @class = "btn-primary btn" })
                @Html.ActionLink("Detail", "DetailOffre", "Offre", new { id = item.Id }, new { @class = "btn-primary btn" }) 
                @Html.ActionLink("Postuler", "PostulerOffre", "Postulation", new { offreId = item.Id }, new { @class = "btn-primary btn" })
                @Html.ActionLink("Supprimer", "SupprimerOffre", "Offre", new { id = item.Id }, new { @class = "btn-primary btn" })
            </td>
        </tr>
    }

</table>
